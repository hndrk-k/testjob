{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "labels": {
            "special-label": "SUPER_IMPORTANT_INFO"
        },
        "name": "PLACEHOLDER",
        "namespace": "test-ns-1"
    },
    "spec": {
        "backoffLimit": 0,
        "completions": 1,
        "parallelism": 1,
        "template": {
            "metadata": {
                "labels": {
                    "special-label": "SUPER_IMPORTANT_INFO"
                }
            },
            "spec": {
                "containers": [
                    {
                        "command": [
                            "/bin/sh",
                            "-c"
                        ],
                        "args": [
                            "sleep 1"
                        ],
                        "env": [
                            {
                                "name": "ADDITIONAL_ENV",
                                "value": "Hello!"
                            }
                        ],
                        "image": "alpine:3",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "job",
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File",
                        "volumeMounts": [
                            {
                                "mountPath": "/external",
                                "name": "external-volume"
                            }
                        ]
                    },
                    {
                        "name": "not-beta-sidecar",
                        "image": "bash:5.1.8",
                        "command": [
                            "/bin/sh",
                            "-c"
                        ],
                        "args": [
                            "sleep 5"
                        ],
                        "env": [
                            {
                                "name": "SPECIAL_SIDECAR",
                                "value": "SPECIAL_ENV"
                            }
                        ],
                        "resources": {},
                        "volumeMounts": [
                            {
                                "name": "external-volume",
                                "mountPath": "/external"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "emptyDir": {},
                        "name": "external-volume"
                    }
                ]
            }
        }
    }
}
