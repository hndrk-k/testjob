{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "labels": {
            "job-name": "PLACEHOLDER"
        },
        "name": "PLACEHOLDER",
        "namespace": "test-ns-1"
    },
    "spec": {
        "backoffLimit": 0,
        "completions": 1,
        "parallelism": 1,
        "template": {
            "metadata": {
                "labels": {
                    "job-name": "PLACEHOLDER"
                }
            },
            "spec": {
                "containers": [
                    {
                        "command": [
                            "/workdir/scripts/wrapper.sh"
                        ],
                        "env": [
                            {
                                "name": "ADDITIONAL_ENV",
                                "value": "Hello!"
                            }
                        ],
                        "image": "alpine:3",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "job",
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File",
                        "volumeMounts": [
                            {
                                "mountPath": "/workdir",
                                "name": "workdir"
                            },
                            {
                                "mountPath": "/workdir/scripts",
                                "name": "scripts"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "emptyDir": {},
                        "name": "workdir"
                    }
                ]
            }
        }
    }
}
